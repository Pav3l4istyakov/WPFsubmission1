<Window x:Class="WPFsubmission1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFsubmission1"
        mc:Ignorable="d"
       Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:DateToColorConverter x:Key="DateToColorConverter"/>
        <Style x:Key="ListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Список дел" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Left" Margin="10"/>
        <Button Grid.Row="0" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top" Click="AddButton_Click">
            <Image Source="Image/add.png" Width="20" Height="20" />
        </Button>

        <ListBox Grid.Row="1" Margin="5" Name="TaskListListBox" ItemsSource="{Binding TodoList}"
                 HorizontalContentAlignment="Stretch" ItemContainerStyle="{StaticResource ListBoxItemStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{Binding Doing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Title}" TextWrapping="Wrap" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="{Binding Description}" TextWrapping="Wrap" FontSize="12" Foreground="Gray"/>
                        <TextBlock Grid.Column="3" Text="{Binding DueDate, StringFormat=d}" TextWrapping="Wrap" FontSize="12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DueDate, Converter={StaticResource DateToColorConverter}, ConverterParameter=Past}" Value="True">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DueDate, Converter={StaticResource DateToColorConverter}, ConverterParameter=Today}" Value="True">
                                            <Setter Property="Foreground" Value="#FFEA6A20"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DueDate, Converter={StaticResource DateToColorConverter}, ConverterParameter=Tomorrow}" Value="True">
                                            <Setter Property="Foreground" Value="#DAA520"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DueDate, Converter={StaticResource DateToColorConverter}, ConverterParameter=Future}" Value="True">
                                            <Setter Property="Foreground" Value="#FF71C52F"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Grid.Column="4" Click="DeleteButton_Click" Padding="0" Background="#5EBEC4">
                            <Image Source="Image/delete.png" Width="16" Height="16" Stretch="Uniform" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Orientation="Vertical" Grid.Row="2" HorizontalAlignment="Stretch" Margin="5">
            <TextBlock Name="ProgressText" HorizontalAlignment="Center"/>
            <ProgressBar Name="TaskProgressBar" Height="20" Margin="5">
                <ProgressBar.Resources>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Background" Value="#FFFDFAF1"/>
                        <Setter Property="Foreground" Value="#5EBEC4"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="#5EBEC4"/>
                    </Style>
                </ProgressBar.Resources>
            </ProgressBar>
        </StackPanel>
    </Grid>
</Window>
